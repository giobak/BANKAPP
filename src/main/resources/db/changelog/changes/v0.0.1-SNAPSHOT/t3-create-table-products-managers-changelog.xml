<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create products_managers table" author="o.molchanova">
        <preConditions onFail="CONTINUE" onFailMessage="Table products_managers already exists">
            <not>
                <tableExists tableName="products_managers"/>
            </not>
        </preConditions>
        <createTable tableName="products_managers">
            <column name="id" type="integer" autoIncrement="true" generationType="AUTO">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="integer">
                <constraints foreignKeyName="fk_pm_product" references="products(id)" nullable="false"/>
            </column>
            <column name="manager_id" type="integer">
                <constraints foreignKeyName="fk_pm_manager" references="managers(id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>